@model MarketPlace.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}
<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Edit</h2>
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ProductId" hidden class="control-label">Id</label>
                    <input asp-for="ProductId" hidden class="form-control" />
                    <span asp-validation-for="ProductId" hidden class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SellerId" hidden class="control-label">Id</label>
                    <input asp-for="SellerId" hidden class="form-control" />
                    <span asp-validation-for="SellerId" hidden class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">Name</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDescription" class="control-label">Description</label>
                    <input asp-for="ProductDescription" class="form-control" />
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductBrand" class="control-label">Brand</label>
                    <input asp-for="ProductBrand" class="form-control" />
                    <span asp-validation-for="ProductBrand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductPrice" class="control-label">Price</label>
                    <input asp-for="ProductPrice" class="form-control" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Files" class="control-label">Images</label>
                    <input type="file" accept="image/*" asp-for="Files" multiple class="form-control" />
                  <input asp-for="ProductImagesUrl" hidden value=@Model.ProductImagesUrl class="form-control" />

                    <span asp-validation-for="Files" class="text-danger"></span>
                    <br />
                    @if (Model.ProductImagesUrl != null)
                    {
                        string[] imagesUrl = Model.ProductImagesUrl.Split('`');
                        foreach (var image in imagesUrl)
                        {
                            if (image != "")
                            {
                                <img src="~/images/@image" style="width:128px,margin:10px,disply:inline" class="text-centre img-thumbnail img col-3" />
                            }
                        }
                    }

                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary col-12" />
                </div>
            </form>
        </div>
    </div>
</div>

