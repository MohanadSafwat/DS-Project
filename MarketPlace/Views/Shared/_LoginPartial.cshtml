@using Microsoft.AspNetCore.Identity
@using MarketPlace.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="col-lg-3 col-md-4 ">
        <ul class="top-nav">
            <li>
                
                <a id="manage" class=" text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                <form style="display: inline-block" id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-danger">Logout</button>
                </form>
            </li>

        </ul>
    </div>
}
else
{
    <div class="col-lg-2 col-md-3 ">
        <ul class="top-nav">
            <li>
                <a id="register" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-user-edit me-2"></i>  Register</a>
            </li>
            <li>
                <a id="login" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt me-2"></i>  Login</a>
            </li>

        </ul>
    </div>


